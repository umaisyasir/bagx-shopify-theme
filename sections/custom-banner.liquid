<style>
  /* Main section layout */
  .banner-section {
    display: flex;
    width: 100%;
    gap: 15px; /* Adjust the gap between columns */
    overflow: hidden;
    padding: 10px 35px 40px;
    justify-content: center;
  }

  /* Left column styling */
  .banner-column-1 {
    flex: 0 0 50%; /* Left column is 50% */
    max-width: 50%;
  }

  .banner-column-1 a {
    width: 100%;
  }
  
  .banner-column-1 img {
    width: 100%;
    height: auto;
    border-radius: 5px; /* Optional: adds rounded corners */
    transition: transform 0.3s ease, opacity 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Smooth transition */
  }

  .banner-column-1 img:hover {
    transform: scale(1.05); /* Zoom effect */
    opacity: 0.9; /* Slight opacity change */
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15); /* Shadow effect */
    overflow: hidden;
  }

  /* Right column styling */
  .banner-column-2 {
    flex: 0 0 50%; /* Right column is 50% */
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  /* Large banner in right column */
  .large-banner {
    width: 100%;
    margin-bottom: 10px;
  }

  .large-banner img {
    width: 100%;
    height: auto;
    border-radius: 5px; /* Optional: adds rounded corners */
    transition: transform 0.3s ease, opacity 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Smooth transition */
  }

  .large-banner img:hover {
    transform: scale(1.05); /* Zoom effect */
    opacity: 0.9; /* Slight opacity change */
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15); /* Shadow effect */
  }

  /* Small banners below the large banner */
  .small-banners {
    display: flex;
    gap: 15px;
  }

  .small-banner {
    flex: 1; /* Each small banner takes up equal space */
  }

  .small-banner img {
    width: 100%;
    height: auto; /* Maintain aspect ratio */
    border-radius: 5px; /* Optional: adds rounded corners */
    transition: transform 0.3s ease, opacity 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease; /* Smooth transition */
  }

  .small-banner img:hover {
    transform: scale(1.05); /* Zoom effect */
    opacity: 0.9; /* Slight opacity change */
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15); /* Shadow effect */
    border-color: #bbb; /* Border color change on hover */
  }

  /* Responsive behavior */
  @media (max-width: 768px) {
    .banner-section {
      flex-direction: column;
      padding: 0 !important;
    }

    .banner-column-1,
    .banner-column-2 {
      flex: 0 0 100%;
      max-width: 100%;
    }

    .small-banners {
      flex-direction: column;
    }

    .small-banner {
      margin-bottom: 10px;
    }
  }
</style>
<div class="banner-section">
  <!-- Left Column (40%) -->
  <div class="banner-column-1">
    <div class="image-banner" style="display: flex; flex-wrap: wrap; gap: 19px;">
      <a href="{{ section.settings.link_1 }}">
        <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="Right Top Banner">
      </a>
      <a href="{{ section.settings.link_5 }}">
        <img src="{{ section.settings.image_5 | img_url: 'master' }}" alt="Right Top Banner">
      </a>
    </div>
  </div>

  <!-- Right Column (60%) -->
  <div class="banner-column-2">
    <!-- Top Large Banner (100%) -->
    <div class="large-banner">
      <a href="{{ section.settings.link_2 }}">
        <img src="{{ section.settings.banner_1 | img_url: 'master' }}" alt="Right Top Banner">
      </a>
    </div>

    <!-- Two Smaller Banners (50% each) -->
    <div class="small-banners">
      <div class="small-banner">
        <a href="{{ section.settings.link_3 }}">
          <img src="{{ section.settings.banner_2 | img_url: 'master' }}" alt="Right Bottom Left Banner">
        </a>
      </div>
      <div class="small-banner">
        <a href="{{ section.settings.link_4 }}">
          <img src="{{ section.settings.banner_3 | img_url: 'master' }}" alt="Right Bottom Right Banner">
        </a>
      </div>
    </div>
  </div>
</div>

