{% stylesheet %}
.store-locator-section {
  padding: 40px 20px;
}

.store-locator-heading {
  text-align: center;
  font-size: 28px;
  font-weight: 300;
  margin-bottom: 30px;
  color: #2c3e50;
}

.store-locator {
  display: flex;
  gap: 20px;
  padding: 20px;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease forwards;
  justify-content: center;
}

/* Custom Scrollbar for WebKit Browsers (Chrome, Edge, Safari) */
.store-collapsible {
    width: 25%; /* Adjust container width */
    max-width: 100%;
    height: 450px; /* Fixed height */
    overflow-y: auto; /* Enable vertical scrolling */
    overflow-x: hidden; /* Disable horizontal scrolling */
}

.store-collapsible::-webkit-scrollbar {
    width: 10px; /* Width of the vertical scrollbar */
    height: 0; /* Effectively removes the horizontal scrollbar */
}

.store-collapsible::-webkit-scrollbar-thumb {
    background-color: rgba(76, 175, 80, 0.8); /* Semi-transparent handle color */
    border-radius: 10px; /* Fully rounded scrollbar handle */
    border: 2px solid transparent; /* Transparent border for space effect */
    background-clip: padding-box; /* Ensures the border does not overlap the handle */
}

.store-collapsible::-webkit-scrollbar-track {
    background: transparent; /* Transparent scrollbar track */
}

/* Custom Scrollbar for Firefox */
.store-collapsible {
    scrollbar-width: thin; /* Set the scrollbar width to thin */
    scrollbar-color:rgb(175 76 76 / 52%) transparent; /* Handle color and transparent track */
    overflow-x: hidden; /* Disable horizontal scrolling */
}

.collapsible {
  background-color: #cb86a2;
  color: white;
  cursor: pointer;
  padding: 15px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
  border-radius: 4px;
  transition: background-color 0.2s ease, transform 0.2s ease;
}

.collapsible:hover {
  background-color: #cb86a2;
  transform: scale(1.02);
}

.active, .collapsible:active {
  background-color: #f42b65;
}

.content {
  display: none;
  overflow: hidden;
  background-color: #f1f1f1;
  padding: 15px;
  border-radius: 4px;
  margin-bottom: 10px;
  transition: max-height 0.5s ease, opacity 0.5s ease;
  max-height: 0;
  opacity: 0;
}

.content.open {
  display: block;
  max-height: 500px; /* Allows smooth opening */
  opacity: 1;
}

.content ul {
  list-style-type: none;
  padding: 0;
  margin-bottom: 0;
  margin-left: 10px;
}

.content li {
  margin-bottom: 15px;
  border-bottom: 1px solid #b7b7b7;
  padding-bottom: 10px;
}

.content li:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
}

.content p {
  margin: 5px 0;
  font-size: 14px;
  color: #7f8c8d;
  transition: color 0.3s ease;
}

.store-map iframe {
  width: 100%;
  height: 450px;
  border: 0;
  border-radius: 4px;
  opacity: 0;
  transform: translateY(20px);
  animation: fadeInUp 0.6s ease 0.2s forwards;
}

.store-map {
    position: relative;
    background: #d5d5d5;
    width: 75%;
    height: 450px;
}

@keyframes fadeInUp {
  0% {
    opacity: 0;
    transform: translateY(20px);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Popup container - hidden by default */
.map-popup {
  display: none; /* Hidden by default */
  position: fixed;
  z-index: 1000; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7); /* Black background with opacity */
  justify-content: center;
  align-items: center;
}

/* The map iframe inside the popup */
.map-popup iframe {
  width: 90%;
  height: 80%;
  border-radius: 8px;
  border: none;
}

/* Close button inside the popup */
.close-popup {
  position: absolute;
  top: 5px;
  right: 20px;
  font-size: 30px;
  color: #fff;
  cursor: pointer;
}

.content p:first-child {
    font-size: 16px;
    color: #3498db;
    text-decoration: none;
    font-weight: 700;
    cursor: pointer;
    transition: color .3s ease;
    margin-bottom: 10px;
}

.content p:first-child:hover {
  color: #2980b9;
}

.content p:not(:first-child) {
  font-weight: 300;
}

#click-hint {
  text-align: center;
  font-size: 16px;
  font-weight: 600;
  color: #fff;
  opacity: 1;
  transition: opacity 0.3s ease;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

/* Show popup only on mobile view */
@media (max-width: 768px) {
  .store-map {
    display: none;
  }
  
  .map-popup {
    display: none; /* Will be shown by JavaScript */
  }
}

@media (max-width: 768px) {
  .store-locator {
    flex-direction: column;
  }

  .store-map iframe {
    height: 400px;
    width: 100% !important;
  }

  .store-collapsible,
  .store-map {
    width: 100% !important;
  }
}
